{
    "git": {
        "brew": "brew install git",
        "pacman": "pacman -S git",
        "apt": "apt-get --yes install git"
    },
    "zsh": {
        "brew": "brew install zsh",
        "pacman": "pacman -S zsh",
        "apt": "apt-get --yes install zsh"
    },
    "node": {
        "brew": "brew install node",
        "pacman": "pacman -S nodejs npm",
        "apt": "curl -sL https://deb.nodesource.com/setup_11.x | sudo -E bash - && sudo apt-get install -y nodejs"
    }
}